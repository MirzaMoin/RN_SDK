<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.LoginActivities.VideoMotionLoginActivity">
    <VideoView
        android:id="@+id/videoViewLogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="4:3"
        android:backgroundTint="#fff"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />
    <LinearLayout
        android:id="@+id/liVideo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:orientation="vertical"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is Title Text For Login "
            android:textSize="@dimen/_24ssp"
            android:layout_marginHorizontal="@dimen/_22ssp"
            android:layout_marginTop="@dimen/_10sdp"

            android:textColor="#81BF9C"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OUR FRIEND GOES OUT BETTER WE HELP THEM GO OUT MORE

"
            android:textSize="@dimen/_14ssp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginVertical="@dimen/_70sdp"

            android:paddingHorizontal="@dimen/_10sdp"
            android:textColor="#fff"
            android:gravity="center"/>
        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#413798"
            android:textSize="@dimen/_10sdp"
            android:textColor="#fff"
            android:paddingHorizontal="@dimen/_30sdp"

            android:text="JOIN NOW" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textSize="@dimen/_10sdp"
            android:textColor="#276A7B"
            android:layout_marginTop="@dimen/_30sdp"
            android:paddingHorizontal="@dimen/_30sdp"

            android:text="Sign In" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>