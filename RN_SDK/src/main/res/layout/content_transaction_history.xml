<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_2sdp"
        >
        <ImageView
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:src="@drawable/ic_baseline_calendar_today_24"
            android:layout_gravity="center_vertical"

            app:tint="#8F8F8F" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: "
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/_12ssp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textColor="#000"
android:textStyle="bold"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 May 2021"
            android:textColor="#FF0000"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/_12ssp"

            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLocationTH"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_2sdp"
        >
        <ImageView
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:src="@drawable/ic_baseline_location_on_24"
            android:layout_gravity="center_vertical"

            app:tint="#8F8F8F" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location: "
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/_12ssp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textColor="#000"
            android:textStyle="bold"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fsfhbjh33-njnjnczx-2jnjnkjn0nkjnkjn"
            android:textColor="#8F8F8F"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/_12ssp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_2sdp"
        >
        <ImageView
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:src="@drawable/ic_baseline_card_giftcard_24"
            android:layout_gravity="center_vertical"

            app:tint="#8F8F8F" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Point: "
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/_12ssp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textColor="#000"
            android:textStyle="bold"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+1"
            android:textColor="#4CAF50"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/_12ssp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_2sdp"
        >
        <ImageView
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:src="@drawable/ic_baseline_credit_card_24"
            android:layout_gravity="center_vertical"

            app:tint="#8F8F8F" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance: "
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/_12ssp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textColor="#000"
            android:textStyle="bold"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="51"
            android:textColor="#B6B6B6"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/_12ssp"

            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearTypeTH"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_2sdp"
        >
        <ImageView
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:src="@drawable/ic_baseline_email_24"
            android:layout_gravity="center_vertical"

            app:tint="#8F8F8F" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type: "
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/_12ssp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textColor="#000"
            android:textStyle="bold"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaction"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/_12ssp"

            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearStatusTH"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_2sdp"
        >
        <ImageView
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:src="@drawable/ic_baseline_email_24"
            android:layout_gravity="center_vertical"

            app:tint="#8F8F8F" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: "
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/_12ssp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textColor="#000"
            android:textStyle="bold"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Earned"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/_12ssp"

            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearTotalSpendTH"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_2sdp"
        >
        <ImageView
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:src="@drawable/ic_baseline_email_24"
            android:layout_gravity="center_vertical"

            app:tint="#8F8F8F" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Spend: "
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/_12ssp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textColor="#000"
            android:textStyle="bold"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$1.00"
            android:textColor="#000"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/_12ssp"

            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearCollExTH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#000"
            android:layout_gravity="center_vertical"

            android:layout_weight="1"
            />
     <ImageView
         android:id="@+id/imgExpand"
         android:layout_width="wrap_content"
         android:layout_height="@dimen/_20sdp"
         android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
         android:rotation="180"
android:layout_gravity="center_vertical"

         app:tint="#000" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#000"
            android:layout_gravity="center_vertical"

            android:layout_weight="1"

            />
    </LinearLayout>



</LinearLayout>