<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:id="@+id/drawer_layout_home"
    android:layout_height="match_parent"
    tools:openDrawer="right"
    tools:context=".Activities.HomeActivity">
    <ImageView
        android:id="@+id/imgBackgroundHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        >
        <LinearLayout
            android:id="@+id/linearTopHome"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"

          android:orientation="vertical"
            >


            <androidx.appcompat.widget.Toolbar

                app:contentInsetStart="0dp"
                android:id="@+id/toolbarHome"

                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:targetApi="lollipop">
                <TableLayout
                    android:id="@+id/tableLayoutHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TableRow>

                        <ImageButton

                            android:layout_width="@dimen/_22sdp"
                            android:scaleType="fitXY"
                            android:layout_height="@dimen/_22sdp"
                            android:src="@drawable/ic_baseline_menu_24"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/transparent"
                            android:id="@+id/imgDrawer"
                            android:tint="#fff"
                            android:layout_marginHorizontal="@dimen/_8sdp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true" />


                        <TextView
                            android:id="@+id/textHomePageHeaderMenuText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""


                            android:textSize="@dimen/_16sdp"
                            android:layout_gravity="center_vertical"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:layout_alignParentTop="true"
                            android:layout_weight="1"
                            />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/image_login_bg"
                            android:id="@+id/imgProfileHome"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginVertical="@dimen/_5sdp"
                            android:background="@android:color/transparent"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true" />


                    </TableRow>

                </TableLayout>
            </androidx.appcompat.widget.Toolbar>
            <LinearLayout
                android:id="@+id/linearPointHomeTop"
                android:layout_width="match_parent"
                android:background="#000"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/linearHomePageDisplayPointsAvailableTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:text="x"

                        android:textSize="@dimen/_12ssp"
                        />
                    <TextView
                        android:id="@+id/textHomePageDisplayPointsAvailableTextTop"
                        android:textColor="#fff"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"

                        android:textSize="@dimen/_11ssp"

                        android:text=""
                        android:gravity="center"


                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearHomePageDisplayPointsThisMonthTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:padding="@dimen/_5sdp"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <TextView                    android:textSize="@dimen/_12ssp"


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:text="x"
                        />
                    <TextView
                        android:id="@+id/textHomePageDisplayPointsThisMonthTextTop"
                        android:textColor="#fff"
                        android:textSize="@dimen/_11ssp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:singleLine="true"

                        android:gravity="center"


                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearHomePageDisplayPointsTotalRedeemedTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:textSize="@dimen/_12ssp"

                        android:text="x"
                        />
                    <TextView
                        android:id="@+id/textHomePageDisplayPointsTotalRedeemedTextTop"

                        android:textColor="#fff"
                        android:textSize="@dimen/_11ssp"



                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:singleLine="true"

                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearHomePageDisplayPointsLifetimeEarnedTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:gravity="center"

                    android:layout_weight="1"

                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:text="x"
                        android:textSize="@dimen/_12ssp"

                        />
                    <TextView
                        android:id="@+id/homePageDisplayPointsLifetimeEarnedTextTop"
                        android:textColor="#fff"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"


                        android:textSize="@dimen/_11ssp"

                        android:singleLine="true"

                        android:text=""

                        />

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            <RelativeLayout
                android:id="@+id/relHomePageRibbonTop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_18sdp"
                android:background="#fff"
                android:visibility="gone"

                >
                <TextView
                    android:id = "@+id/textHomePageRibbonTextTop"
                    android:textSize = "@dimen/_12ssp"
                    android:textAlignment = "center"
                    android:layout_width = "match_parent"
                    android:ellipsize = "marquee"
                    android:fadingEdge = "horizontal"
                    android:marqueeRepeatLimit = "marquee_forever"
                    android:scrollHorizontally = "true"
                    android:text = ""
                    android:layout_centerVertical="true"
                    android:layout_height = "wrap_content"
                    android:singleLine = "true"
                    android:gravity="center_horizontal" />
                <ImageView
                    android:id="@+id/imgHomePageRibbonIconTop"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"

                    android:padding="@dimen/_3sdp"
                    android:tint="#000"

                    android:layout_alignParentRight="true" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relTopContainer"
                android:layout_below="@+id/relHomePageRibbonTop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/imgTopContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    />

                <LinearLayout
                    android:id="@+id/linearTopContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"

                    >
                    <TextView
                        android:id="@+id/textHomePageTopTextLine1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="@dimen/_20sdp"
                        />
                    <View
                        android:id="@+id/viewHomePageTopTextUnderLine1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/_20sdp"

                        android:layout_marginTop="@dimen/_10sdp"

                        />
                    <TextView
                        android:id="@+id/textHomePageTopTextLine2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:textSize="@dimen/_20sdp"
                        />
                    <View
                        android:id="@+id/viewHomePageTopTextUnderLine2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/_20sdp"
                        />
                    <TextView
                        android:id="@+id/textHomePageTopDescriptionText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=""
                        android:visibility="gone"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:textSize="@dimen/_14sdp"
                        android:paddingHorizontal="@dimen/_25sdp"
                        android:capitalize="none"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_10sdp"

                        android:visibility="invisible"
                        android:layout_gravity="center"
                        android:id="@+id/btnHomePageHeader3"
                        android:paddingHorizontal="@dimen/_20sdp"
                        android:textSize="@dimen/_12ssp"
                        />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearPointHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/linearHomePageDisplayPointsAvailable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:text="x"

                        android:textSize="@dimen/_12ssp"
                        />
                    <TextView
                        android:id="@+id/textHomePageDisplayPointsAvailableText"
                        android:textColor="#fff"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"

                        android:textSize="@dimen/_11ssp"

                        android:text=""
                        android:gravity="center"


                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearHomePageDisplayPointsThisMonth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:padding="@dimen/_5sdp"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <TextView                    android:textSize="@dimen/_12ssp"


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:text="x"
                        />
                    <TextView
                        android:id="@+id/textHomePageDisplayPointsThisMonthText"
                        android:textColor="#fff"
                        android:textSize="@dimen/_11ssp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:singleLine="true"

                        android:gravity="center"


                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearHomePageDisplayPointsTotalRedeemed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:textSize="@dimen/_12ssp"

                        android:text="x"
                        />
                    <TextView
                        android:id="@+id/textHomePageDisplayPointsTotalRedeemedText"

                        android:textColor="#fff"
                        android:textSize="@dimen/_11ssp"



                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:singleLine="true"

                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearHomePageDisplayPointsLifetimeEarned"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:gravity="center"

                    android:layout_weight="1"

                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:text="x"
                        android:textSize="@dimen/_12ssp"

                        />
                    <TextView
                        android:id="@+id/homePageDisplayPointsLifetimeEarnedText"
                        android:textColor="#fff"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"


                        android:textSize="@dimen/_11ssp"

                        android:singleLine="true"

                        android:text=""

                        />

                </LinearLayout>
            </LinearLayout>

            </RelativeLayout>


        </LinearLayout>
        <RelativeLayout
            android:id="@+id/relHomePageRibbon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_18sdp"
            android:orientation="horizontal"

            android:visibility="gone"
            android:background="#fff"
            >
            <TextView
                android:id = "@+id/textHomePageRibbonText"
                android:textSize = "@dimen/_12ssp"
                android:textAlignment = "center"
                android:layout_width = "match_parent"
                android:ellipsize = "marquee"
                android:fadingEdge = "horizontal"
                android:marqueeRepeatLimit = "marquee_forever"
                android:scrollHorizontally = "true"
                android:text = ""
                android:layout_height = "wrap_content"
                android:singleLine = "true"
                android:gravity="center_horizontal" />
            <ImageView
                android:id="@+id/imgHomePageRibbonIcon"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:visibility="gone"
                android:src="@drawable/ic_baseline_share_24"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/_3sdp"
                android:tint="#000"

                android:layout_alignParentRight="true" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relBottomContainer"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/imgBottomContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />
            <RelativeLayout
                android:id="@+id/relativeBottomGridHome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_20sdp"

                >
                <!-- activity_screen_slide.xml -->
                <androidx.viewpager.widget.ViewPager
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/viewPagerHome"


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >



                </androidx.viewpager.widget.ViewPager>
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tablayoutHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabBackground="@drawable/tab_selector"
                    app:tabGravity="center"
                    android:layout_alignParentBottom="true"

                    android:layout_marginBottom="@dimen/_41sdp"
                    app:tabIndicatorHeight="0dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relativeBottomListHome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvHomeMenuLink"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_40sdp"

                    >
                </androidx.recyclerview.widget.RecyclerView>
            </RelativeLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                >




                  <androidx.recyclerview.widget.RecyclerView
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/_40sdp"
                      app:layout_constraintBottom_toBottomOf="parent"

                      android:id="@+id/rvFooterHome"
                      />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </RelativeLayout>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/linearDrawerHome"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="match_parent"

        android:paddingVertical="@dimen/_30sdp"
        android:orientation="vertical"
        android:layout_gravity="left|start"

        >
        <ExpandableListView
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/expandableListView"
            android:layout_height="wrap_content"

            android:foregroundTint="#fff"
            android:layout_width="@dimen/_190sdp"
            android:indicatorEnd="?android:attr/expandableListPreferredItemIndicatorRight"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="0.5dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_75sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="@dimen/_75sdp"
            android:src="@drawable/image_logo"
            android:layout_gravity="center_horizontal"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRIVACY POLICY | "
                android:textSize="@dimen/_12sdp"
                android:textColor="#fff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"

                android:text="TERMS OF SERVICE"
                android:textColor="#fff"/>

        </LinearLayout>    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>