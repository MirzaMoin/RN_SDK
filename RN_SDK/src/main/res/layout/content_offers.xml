<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_280sdp"
    android:orientation="vertical"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_2sdp"
        >  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        android:background="#000"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/image_login_bg"
            android:scaleType="fitXY"
            />
        <Button
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_20sdp"
            android:text="15 PTS"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/background_point_button"
            android:textColor="#fff"
            android:textSize="@dimen/_10ssp"
            />

        <LinearLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="#92EC3C3C"
            android:layout_alignParentBottom="true"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="PG(15)"
                android:textColor="#fff"
                android:textSize="@dimen/_12sdp"
                android:gravity="center"
                android:textStyle="bold"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Not to be combined with any other offers. One offer per table"
        android:textSize="@dimen/_12sdp"
        android:layout_margin="@dimen/_12sdp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_12sdp"
        >
        <ImageView
            android:id="@+id/imgAward"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_baseline_gpp_good_24"
            app:tint="#2179BF" />
        <TextView
            android:layout_toRightOf="@id/imgAward"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reward Goal"
            android:textColor="#2179BF"
            android:textStyle="bold"

            android:textSize="@dimen/_12sdp"
            />
        <TextView
android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Expiration"
            android:textColor="#5C6063"
            android:textStyle="bold"

            android:textSize="@dimen/_12sdp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>