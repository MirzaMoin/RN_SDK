<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CashbackActivity">
    <LinearLayout
        android:id="@+id/linearTopWaysToEarn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar

            app:contentInsetStart="0dp"
            android:id="@+id/toolbarCashback"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            tools:targetApi="lollipop">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="#59062B8A"
                >

                <TableRow>

                    <ImageButton

                        android:layout_width="@dimen/_22sdp"
                        android:scaleType="fitXY"
                        android:layout_height="@dimen/_22sdp"
                        android:src="@drawable/ic_baseline_arrow_back_24"
                        android:layout_gravity="center_vertical"
                        android:background="@android:color/transparent"
                        android:id="@+id/imgBackWaysToEarn"
                        android:tint="#fff"
                        android:layout_marginHorizontal="@dimen/_8sdp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ways to Earn"


                        android:textSize="@dimen/_16sdp"
                        android:layout_gravity="center_vertical"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#fff"
                        android:layout_alignParentTop="true"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="0 PTS"
                        android:textColor="#fff"
                        android:textSize="@dimen/_14ssp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp" />


                </TableRow>

            </TableLayout>
        </androidx.appcompat.widget.Toolbar>


    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvWaysToEarn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/linearTopWaysToEarn"

        app:layout_constraintBottom_toTopOf="@+id/bottomNavBarWaysToEarn"
        />
    <LinearLayout
        android:id="@+id/bottomNavBarWaysToEarn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5B599D"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:src="@drawable/ic_baseline_email_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="#fff"
                />
            <TextView
                android:textColor="#fff"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="GO"
                android:gravity="center"

                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearCashbackHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:padding="@dimen/_5sdp"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:src="@drawable/ic_baseline_email_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="#fff"
                />
            <TextView
                android:textColor="#fff"


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Cashback"
                android:gravity="center"

                />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearRPGCashback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"

            >
            <ImageView
                android:src="@drawable/ic_baseline_email_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="#fff"
                />
            <TextView
                android:textColor="#fff"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="RPG"
                android:gravity="center"

                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:gravity="center"

            android:layout_weight="1"

            android:orientation="vertical"
            >
            <ImageView
                android:src="@drawable/ic_baseline_email_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:tint="#fff" />
            <TextView
                android:textColor="#fff"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Home"
                android:gravity="center"

                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearHomeCashback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:gravity="center"

            android:layout_weight="1"

            android:orientation="vertical"
            >
            <ImageView
                android:src="@drawable/ic_baseline_email_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="#fff" />
            <TextView
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Home"
                android:gravity="center"

                />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>