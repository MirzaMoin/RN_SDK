<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutLoginCleanButtons"
    android:background="@drawable/image_login_bg"
    tools:context=".Activities.LoginActivities.CleanButtonsLoginActivity">
    <ScrollView
        android:layout_width="match_parent"

        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="THIS IS TITLE TEXT FOR LOGIN"
                android:textSize="@dimen/_20ssp"
                android:layout_marginHorizontal="@dimen/_25sdp"
android:layout_marginTop="@dimen/_10sdp"

                android:textColor="#fff"
                android:gravity="center"/>

           <ImageView
               android:layout_width="@dimen/_200sdp"
               android:layout_height="@dimen/_200sdp"
               android:src="@drawable/image_logo"
               />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:drawableTint="#ffcb38"
                android:hint="Email, Mobile or Member ID"
                android:textColorHint="#ffcb38"
                android:textColor="#ffcb38"
                android:textSize="@dimen/_12ssp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:backgroundTint="#ffcb38"
                android:drawablePadding="@dimen/_10sdp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:drawableTint="#ffcb38"
                android:hint="Password"
                android:textColorHint="#ffcb38"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:textSize="@dimen/_12ssp"



                android:textColor="#ffcb38"
                android:backgroundTint="#ffcb38"
                android:drawablePadding="@dimen/_10sdp"

                />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember Me"
                android:textColor="#fff"
                android:buttonTint="#fff"
                android:layout_gravity="center"
                android:textSize="@dimen/_12sdp"
                android:layout_margin="@dimen/_10sdp"
                />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3122B1"
                android:textSize="@dimen/_10ssp"
                android:textColor="#fff"
                android:layout_marginTop="@dimen/_30sdp"
                android:paddingHorizontal="@dimen/_30sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"

                android:text="SIGN IN" />
            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#838387"
                android:textSize="@dimen/_10sdp"
                android:textColor="#fff"
                android:paddingHorizontal="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"

                android:text="FORGOT PASSWORD?" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="#fff"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_10sdp"

                android:layout_marginTop="@dimen/_10sdp"

                />
            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#41388F"
                android:textSize="@dimen/_10sdp"
                android:textColor="#fff"
                android:paddingHorizontal="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"

                android:text="JOIN NOW" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>