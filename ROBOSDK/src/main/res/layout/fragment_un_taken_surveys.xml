<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Fragments.UnTakenSurveysFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rvFragmentUnTakenSurvey"

        />

    <LinearLayout
        android:id="@+id/linearNoSurveyUntaken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/image_survey"
            />
        <TextView
            android:id="@+id/textNoSurveyFoundTaken"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/_14ssp"
            android:gravity="center"
            android:text="No Survey Found"
            />
    </LinearLayout>


</FrameLayout>