<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_10sdp"
    android:paddingHorizontal="@dimen/_17sdp"
    android:background="#FFFFFF"
    android:layout_marginHorizontal="@dimen/_5sdp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textTitleAlert"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Success"
        android:textColor="#000"

        android:textSize="@dimen/_16ssp"


        />

    <TextView
        android:id="@+id/textMessageAlert"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="@dimen/_7sdp"
        android:text="We received your contact us query."
        android:textColor="#C1000000"


        android:textSize="@dimen/_13ssp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:paddingBottom="@dimen/_2sdp"
        >
        <TextView
            android:id="@+id/textCancelAlert"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Cancel"
            android:paddingHorizontal="@dimen/_5sdp"


            android:visibility="gone"
            android:paddingVertical="@dimen/_10sdp"
            android:textColor="#000"
            android:textSize="@dimen/_12ssp"

            />
        <TextView
            android:id="@+id/textOKAlert"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="OK"
            android:paddingHorizontal="@dimen/_5sdp"


            android:paddingVertical="@dimen/_10sdp"

            android:textColor="#000"

            android:textSize="@dimen/_12ssp"
            />
    </LinearLayout>


</LinearLayout>