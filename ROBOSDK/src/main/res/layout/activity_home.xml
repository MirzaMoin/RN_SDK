<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.HomeActivity"
    tools:openDrawer="right">

    <ImageView
        android:id="@+id/imgBackgroundHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/linearTopHome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarHome"
                app:contentInsetStart="0dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                tools:targetApi="lollipop">

                <TableLayout
                    android:id="@+id/tableLayoutHome"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"

                    android:orientation="horizontal">

                    <TableRow>

                        <ImageButton
                            android:id="@+id/imgDrawer"
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="@dimen/_22sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="@dimen/_8sdp"
                            android:background="@android:color/transparent"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/ic_baseline_menu_24"
                            android:tint="#fff" />

                        <TextView
                            android:id="@+id/textHomePageHeaderMenuText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text=""
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="@dimen/_16sdp" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imgProfileHome"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginVertical="@dimen/_5sdp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/image_login_bg" />

                    </TableRow>

                </TableLayout>
            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:id="@+id/linearPointHomeTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/linearHomePageDisplayPointsAvailableTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/textHomePageDisplayPointsAvailableTop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x"
                        android:textColor="#fff"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:id="@+id/textHomePageDisplayPointsAvailableTextTop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#fff"
                        android:textSize="@dimen/_11ssp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearHomePageDisplayPointsThisMonthTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/textHomePageDisplayPointsThisMonthTop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x"
                        android:textColor="#fff"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:id="@+id/textHomePageDisplayPointsThisMonthTextTop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#fff"
                        android:textSize="@dimen/_11ssp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearHomePageDisplayPointsTotalRedeemedTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp"
                    >

                    <TextView
                        android:id="@+id/textHomePageDisplayPointsTotalRedeemedTop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x"
                        android:textColor="#fff"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:id="@+id/textHomePageDisplayPointsTotalRedeemedTextTop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#fff"
                        android:textSize="@dimen/_11ssp"

                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearHomePageDisplayPointsLifetimeEarnedTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/homePageDisplayPointsLifetimeEarnedTop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x"
                        android:textColor="#fff"
                        android:textSize="@dimen/_12ssp"
                        />

                    <TextView
                        android:id="@+id/homePageDisplayPointsLifetimeEarnedTextTop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#fff"
                        android:textSize="@dimen/_11ssp"
                        />

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/relHomePageRibbonTop"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_18sdp"
                    android:background="#fff"
                    android:visibility="gone"
                    >
                    <TextView
                        android:id="@+id/textHomePageRibbonTextTop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:ellipsize="marquee"
                        android:fadingEdge="horizontal"
                        android:gravity="center_horizontal"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text=""
                        android:textAlignment="center"
                        android:textSize="@dimen/_12ssp" />

                    <ImageView
                        android:id="@+id/imgHomePageRibbonIconTop"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/_3sdp"
                        app:tint="#000" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relTopContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/relHomePageRibbonTop"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imgTopContainer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:id="@+id/linearTopContainer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:id="@+id/textHomePageTopTextLine1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="@dimen/_25sdp" />

                        <View
                            android:id="@+id/viewHomePageTopTextUnderLine1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_2sdp"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:visibility="gone"

                            />

                        <TextView
                            android:id="@+id/textHomePageTopTextLine2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/_10sdp"
                            android:gravity="center"
                            android:textStyle="bold"

                            android:textSize="@dimen/_28sdp" />

                        <View
                            android:id="@+id/viewHomePageTopTextUnderLine2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_2sdp"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="@dimen/_20sdp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/textHomePageTopDescriptionText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/_10sdp"
                            android:capitalize="none"
                            android:textStyle="bold"

                            android:gravity="center"
                            android:paddingHorizontal="@dimen/_25sdp"
                            android:text=""
                            android:textSize="@dimen/_14sdp"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/btnHomePageHeader3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_20sdp"
                            android:layout_gravity="center"
                            android:layout_marginVertical="@dimen/_10sdp"
                            android:paddingHorizontal="@dimen/_25sdp"
                            android:textSize="@dimen/_12ssp"
                            android:visibility="invisible" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linearPointHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/linearHomePageDisplayPointsAvailable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/_5sdp">

                        <TextView
                            android:id="@+id/textHomePageDisplayPointsAvailable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x"
                            android:textColor="#fff"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/textHomePageDisplayPointsAvailableText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#fff"
                            android:textSize="@dimen/_11ssp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearHomePageDisplayPointsThisMonth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/_5sdp">

                        <TextView
                            android:id="@+id/textHomePageDisplayPointsThisMonth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x"
                            android:textColor="#fff"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/textHomePageDisplayPointsThisMonthText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#fff"
                            android:textSize="@dimen/_11ssp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearHomePageDisplayPointsTotalRedeemed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/_5sdp"
                        >

                        <TextView
                            android:id="@+id/textHomePageDisplayPointsTotalRedeemed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x"
                            android:textColor="#fff"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/textHomePageDisplayPointsTotalRedeemedText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#fff"
                            android:textSize="@dimen/_11ssp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearHomePageDisplayPointsLifetimeEarned"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/_5sdp">

                        <TextView
                            android:id="@+id/homePageDisplayPointsLifetimeEarned"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x"
                            android:textColor="#fff"
                            android:textSize="@dimen/_12ssp"

                            />

                        <TextView
                            android:id="@+id/homePageDisplayPointsLifetimeEarnedText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#fff"
                            android:textSize="@dimen/_11ssp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/relHomePageRibbon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_18sdp"
            android:background="#fff"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/textHomePageRibbonText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:gravity="center_horizontal"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text=""
                android:textAlignment="center"
                android:textSize="@dimen/_12ssp" />

            <ImageView
                android:id="@+id/imgHomePageRibbonIcon"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:padding="@dimen/_3sdp"
                app:srcCompat="@drawable/ic_baseline_share_24"
                android:visibility="gone"
                app:tint="#000" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relBottomContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imgBottomContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:id="@+id/relativeBottomGridHome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_20sdp"
                >
                <!-- activity_screen_slide.xml -->
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPagerHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tablayoutHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_41sdp"
                    app:tabBackground="@drawable/tab_selector"
                    app:tabGravity="center"

                    app:tabIndicatorHeight="0dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeBottomListHome"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvHomeMenuLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_40sdp"

                    />
            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvFooterHome"

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearDrawerHome"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="match_parent"
        android:clickable="true"
        android:layout_gravity="left|start"
        android:orientation="vertical"
        android:paddingVertical="@dimen/_30sdp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >

        <ExpandableListView
            android:id="@+id/expandableListView"
            android:layout_width="@dimen/_190sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:groupIndicator="@null"
            android:layout_marginTop="@dimen/_20sdp"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="0.5dp"
            android:foregroundTint="#fff"
            />

        <ImageView
            android:id="@+id/imageProfileSlider"
            android:layout_width="@dimen/_190sdp"
            android:layout_height="@dimen/_190sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/image_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textPrivacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRIVACY POLICY | "
                android:textColor="#fff"
                android:paddingVertical="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/textTOS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TERMS OF SERVICE"
                android:paddingVertical="@dimen/_5sdp"
                android:textColor="#fff"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>
    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>